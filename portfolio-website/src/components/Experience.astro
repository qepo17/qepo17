---
const experiences = [
  {
    company: 'Shippit',
    position: 'Senior Software Engineer',
    period: 'Feb 2025 - Present',
    technologies: ['Ruby on Rails', 'Typescript', 'PostgreSQL', 'AWS']
  },
  {
    company: 'Luwjistik',
    position: 'Senior Software Engineer',
    period: 'Jun 2023 - Jan 2025',
    technologies: ['Go', 'Typescript', 'PostgreSQL', 'AWS']
  },
  {
    company: 'Ruangguru',
    position: 'Backend Engineer',
    period: 'Oct 2021 - May 2023',
    technologies: ['Go', 'MySQL', 'ElasticSearch', 'Microservices']
  },
  {
    company: 'Wahyu Arta Digital',
    position: 'Freelance Lead Software Engineer',
    period: 'Nov 2020 - Sep 2021',
    technologies: ['PHP', 'TypeScript', 'Javascript', 'MySQL', 'On-premise', 'VM']
  }
];
---

<section id="experience" class="py-6 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-4">
        <h2 class="text-xl font-bold text-foreground">Work Experience</h2>
      </div>
      
      <div class="space-y-2">
        {experiences.map((exp, index) => (
          <div class="bg-neutral-50 rounded p-3">
            <div class="flex items-center justify-between mb-1">
              <h3 class="text-base font-semibold text-foreground">{exp.position}</h3>
              <span class="text-xs text-primary-600 font-medium">
                {exp.period}
              </span>
            </div>
            <h4 class="text-sm text-neutral-700 mb-2">{exp.company}</h4>
            <div class="flex flex-wrap gap-1">
              {exp.technologies.slice(0, 4).map((tech) => (
                <span class="px-1 py-0.5 bg-white border border-neutral-200 text-xs text-neutral-600 rounded text-xs">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>