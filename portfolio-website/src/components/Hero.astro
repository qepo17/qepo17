<section class="bg-gradient-to-br from-background to-neutral-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="max-w-4xl mx-auto">
      <div class="flex items-start gap-6">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white text-xl font-bold shadow-lg">
            TS
          </div>
        </div>
        
        <!-- Content -->
        <div class="flex-1 min-w-0">
          <!-- Name and title -->
          <h1 class="text-2xl md:text-3xl font-bold text-foreground mb-1">
            Taufiq Septryana
          </h1>
          
          <p class="text-base text-neutral-600 mb-3 font-medium">
            Senior Software Engineer
          </p>
          
          <!-- Summary -->
          <p class="text-sm text-neutral-700 mb-4 leading-relaxed">
            Full-stack engineer specializing in end-to-end development. 4+ years building systems in one of biggest edtech companies in Indonesia and various early stage of startups. Learning and using AI day-to-day.
          </p>
          
          <!-- Social links -->
          <div class="flex space-x-3">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 rounded-full bg-white border border-neutral-200 text-neutral-600 hover:text-primary-600 hover:border-primary-300 transition-all duration-200"
                aria-label={social.name}
              >
                <Fragment set:html={social.icon} />
            </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>